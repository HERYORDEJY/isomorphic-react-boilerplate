{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "root": true,
    "plugins": [
        "import"
    ],
    "rules": {
        "strict": 0,
        "comma-dangle": ["error", "never"],
        "no-plusplus": ["error", {
            "allowForLoopAfterthoughts": true
        }],
        "import/no-extraneous-dependencies": "off",
        "no-script-url": "off",
        "global-require": "off"
    }
}
